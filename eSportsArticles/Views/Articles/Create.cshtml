@model NewArticleVM
@using eSportsArticles.Data.Enums
@{
    ViewData["Title"] = "Create a new article";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h4>Create a new article</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="articleName" class="control-label"></label>
                        <input asp-for="articleName" class="form-control" />
                        <span asp-validation-for="articleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="articleCategory" class="control-label"></label>
                        <select asp-for="articleCategory" class="form-control" asp-items="Html.GetEnumSelectList<ArticleCategory>()"></select>
                        <span asp-validation-for="articleCategory" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ratingStars" class="control-label"></label>
                        <input asp-for="ratingStars" class="form-control" />
                        <span asp-validation-for="ratingStars" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="isAvailable" class="control-label"></label>
                        <input asp-for="isAvailable" type="checkbox" />
                        <span asp-validation-for="isAvailable" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Size" class="control-label"></label>
                        <input asp-for="Size" class="form-control" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="startAvailablePeriod" class="control-label"></label>
                        <input asp-for="startAvailablePeriod" type="date" class="form-control" />
                        <span asp-validation-for="startAvailablePeriod" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="endAvailablePeriod" class="control-label"></label>
                        <input asp-for="endAvailablePeriod" type="date" class="form-control" />
                        <span asp-validation-for="endAvailablePeriod" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureURL" class="control-label"></label>
                        <input asp-for="PictureURL" class="form-control" />
                        <span asp-validation-for="PictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StoreIds" class="control-label"></label>
                        <select asp-for="StoreIds" class="form-control">
                            @foreach (var store in ViewBag.Stores)
                            {
                                <option value="@store.Value">@store.Text</option>
                            }
                        </select>
                        <span asp-validation-for="StoreIds" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
            </div>
        </form>
    </div>
</div>
